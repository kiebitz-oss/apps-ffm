{
  "name": "@kiebitz-oss/app-user",
  "description": "Kiebitz User Web Applications",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "contributors": [
    "Benjamin Bender <bb@codepoet.de>",
    "Andreas Dewes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiebitz-oss/apps-ffm",
    "directory": "apps/user"
  },
  "bugs": "https://github.com/kiebitz-oss/apps-ffm/issues",
  "engines": {
    "node": "^14.18.1 || >=16.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "dev": "next dev",
    "build": "cross-env NODE_ENV=development lingui extract --clean && lingui compile && next build && next export --outdir dist",
    "start": "next start",
    "clean": "rimraf --no-glob ./.next ./dist",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:staged": "lint-staged --allow-empty",
    "i18n": "lingui",
    "i18n:extract": "cross-env NODE_ENV=development lingui extract --clean",
    "i18n:compile": "lingui compile",
    "i18n:build": "cross-env NODE_ENV=development lingui extract --clean && lingui compile",
    "docker:build": "docker build . -t kiebitz-user",
    "docker:run": "docker run -p 3000:3000 -it kiebitz-user"
  },
  "dependencies": {
    "@carbon/icons-react": "^10.44.0",
    "@fontsource/ibm-plex-sans": "^4.5.1",
    "@headlessui/react": "^1.4.2",
    "@kiebitz-oss/api": "*",
    "@kiebitz-oss/config": "*",
    "@kiebitz-oss/ui": "*",
    "@lingui/react": "^3.13.0",
    "@mdx-js/loader": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@types/jest": "^27.0.3",
    "clsx": "^1.1.1",
    "next": "^12.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.22.2",
    "react-use": "^17.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@lingui/cli": "^3.13.0",
    "@lingui/macro": "^3.13.0",
    "@next/mdx": "^12.0.7",
    "@svgr/webpack": "^6.1.2",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.3",
    "@types/jest-axe": "^3.5.3",
    "@types/react": "^17.0.37",
    "babel-jest": "^27.4.5",
    "babel-plugin-macros": "^3.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.5.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tailwindcss": "beta",
    "jest": "^27.4.5",
    "jest-axe": "^5.0.1",
    "lint-staged": "^12.1.3",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.0.2",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "lint-staged": {
    "src/*": "yarn lint --fix"
  },
  "lingui": {
    "locales": [
      "de",
      "en"
    ],
    "sourceLocale": "de",
    "format": "po",
    "catalogs": [
      {
        "path": "<rootDir>/locales/{locale}/messages",
        "include": [
          "<rootDir>"
        ],
        "exclude": [
          "**/node_modules/**"
        ]
      }
    ],
    "rootDir": "src",
    "compileNamespace": "cjs",
    "extractBabelOptions": {},
    "compilerBabelOptions": {},
    "fallbackLocales": {},
    "orderBy": "messageId",
    "pseudoLocale": "",
    "runtimeConfigModule": [
      "@lingui/core",
      "i18n"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "rootDir": "src",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom",
      "@testing-library/jest-dom/extend-expect",
      "jest-axe/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.next/",
      "<rootDir>/dist/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:tailwindcss/recommended",
      "next/core-web-vitals",
      "plugin:prettier/recommended"
    ],
    "root": true,
    "settings": {
      "tailwindcss": {
        "groupByResponsive": true
      }
    },
    "ignorePatterns": [
      "node_modules",
      "dist"
    ],
    "rules": {
      "tailwindcss/no-custom-classname": "off",
      "react/no-unescaped-entities": "off",
      "@next/next/no-img-element": "off"
    }
  }
}
